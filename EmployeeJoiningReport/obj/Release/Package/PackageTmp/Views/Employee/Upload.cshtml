
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}
<style>
     .form-group #req:after {
        content: "*";
        color: red;
        font-size: 20px;

    }
      .file {
  visibility: hidden;
  position: absolute;
}
</style>



 


<h3><strong>Documents</strong></h3>
<div>
    <form action="Upload" method="post" enctype="multipart/form-data">
        @if (ViewBag.message != null)
        {
            <div class="form-group">
                <div class="col-md-10">
                    @ViewBag.message
                </div>
            </div>
        }

        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12 column">

                    <table class="table table-bordered table-hover" id="pdfFilestable">
                        <thead>
                            <tr style="background-color:#dddddd;">
                                <th class="text-center col-md-1">
                                    #
                                </th>
                                <th class="text-center col-md-5">
                                    File Description
                                </th>
                                <th class="text-center col-md-6">
                                    File
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr id='filerow0' style="background-color:white;">
                                <td class="text-center col-md-1">
                                    1
                                </td>
                                <td class="text-center col-md-5">
                                    <select class="form-control" id="FileDescription" name="FileDescription">

                                        <option selected>PAN Card</option>
                                        <option>Birth Certificate</option>
                                        <option>10th Marks Card</option>
                                        <option>Degree Certificate</option>
                                        <option>Address Proof</option>
                                        <option>Passport</option>
                                        <option>Driving Licence</option>
                                        <option>Visa</option>
                                        <option>Technical Certifications</option>
                                        <option>Others</option>

                                    </select>
                                </td>
                                <td class="text-center col-md-6">
                                    <div class="form-group ">
                                        <input type="file" name="files" class="file">
                                        <div class="input-group col-xs-9">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-file"></i></span>
                                            <input type="text" class="form-control input-lg" disabled placeholder="Upload .PDF file">
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i> Browse</button>
                                            </span>
                                        </div>
                                    </div>


                                </td>

                                @*<td class="col-md-4">
                                        <iframe id="viewer1" frameborder="0" scrolling="no" width="180" height="200"></iframe>
                                    </td>*@
                            </tr>
                            <tr id='filerow1' style="background-color:white;"></tr>

                        </tbody>

                    </table>


                </div>
            </div>
            <a id="add_pdf" class="btn btn-default pull-left">Add File</a>
            <button class="btn btn-primary  " type="submit" id="uploadAllpdf" style="height: 34px;padding-top: 0px;width:auto;float:right; margin-right: 110px;">
                Upload
            </button>
        </div>
        </form>
</div>
<hr />
<h3><strong> Photo</strong></h3>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <table class="table table-bordered table-hover" id="insuredtab_logic">


                <thead>
                    <tr style="background-color:#dddddd;">
                        <th class="text-center col-md-3 ">
                            File Description
                        </th>
                        <th class="text-center col-md-5 ">
                            File
                        </th>
                        <th class="text-center">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr id='imgrow' style="background-color:white;">
                        <td class="text-center">
                            Employee Photo
                        </td>

                        <td class="col-md-5">
                            <div class="form-group ">
                                <input type="file" name="file" class="file" id="file">
                                <div class="input-group col-xs-10">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                                    <input type="text" class="form-control input-lg" disabled placeholder="Upload .JPG Image">
                                    <span class="input-group-btn">
                                        <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i> Browse</button>
                                    </span>
                                </div>
                            </div>

                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" id="uploadimage" style="margin-left: 100px;">Upload & Submit</button>
                        </td>


                    </tr>
                </tbody>
            </table>
            <p>(<strong style="color:red">*</strong>)Take a print of Application on click of Preview Before Submit.</p>

            <button class="btn btn-primary  glyphicon glyphicon-eye-open" data-toggle="modal" data-target="#myModal" id="showpreview" onclick="return preview();" style="height: 34px;padding-top: 0px;margin-left: 10px;width:100px" disabled="disabled">
                Preview
            </button>
            <button class="btn btn-primary  glyphicon glyphicon-upload" type="button" id="Submit" style="height: 34px;padding-top: 0px;width:auto;float:right; margin-right: 110px;">
                Submit
            </button>
        </div>
    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" style="border:thin" id="modalcontent">
            <div style="padding-top: 10px;padding-left: 30px;"><img src="~/Content/images/acslogo.png" /></div>
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>


            </div>
            <div class="modal-body" id="printbody">

                <div style="width:100%; height:130px; border:1px solid black;margin-bottom: 10px;">


                    <div>
                        <div style="text-align:center;margin-top: 40px; font-size: 35px; font-family:  'Open Sans', sans-serif;color: orange">
                            Joining Report
                        </div>

                        <div style="float:right;border:1px solid black;margin-top: -89px;margin-right: 2px;"> <img id="previewpic" src="#" alt="your image" style="width:105px; height:123px" /></div>
                    </div>
                </div>
                <div id="preview_data" title="Preview Form Data"></div>

            </div>
            <p style="text-align:center">&copy;Advanced Business and Healthcare Solutions India Pvt Ltd</p>
        </div>
        <div class="modal-footer">
            <p>&copy;Advanced Business and Healthcare Solutions India Pvt Ltd</p>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-success btn-lg glyphicon glyphicon-print" id="printButton" type="button"> Print</button>
        </div>
    </div>

</div>

<br />
