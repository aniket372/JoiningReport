
@{
    ViewBag.Title = "EmergencyContacts";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}
<div class="tab-content">
    <h3>Person to contact in case of emergency</h3>

    <hr />
    <form role="form" class="form-horizontal" name="emergencycontacts">
        <div class="form-group">
            <label class="col-sm-1">Name</label><div class="col-sm-6"><input type="text" class="form-control" id="Name" name="Name" onkeypress="return onlyAlphabets(event,this);" required></div>

        </div>
        <div class="form-group">
            <label class="col-sm-1">Relation</label><div class="col-sm-6"><input type="text" class="form-control" placeholder="Mother/ Father etc" name="Relation" id="Relation" onkeypress="return onlyAlphabets(event,this);" required></div>

        </div>
        <div class="form-group">
            <label class="col-sm-1">Mobile</label><div class="col-sm-6"><input type="text" class="form-control" id="Mobile" name="Mobile"></div>

        </div>
        <div class="form-group">
            <label class="col-sm-1">Phone</label><div class="col-sm-6"><input type="text" class="form-control" name="Phone" id="Phone" /></div>

        </div>
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary" id="savebutton2">Save & Continue</button>

        </div>
        <div class="col-sm-6" style="float:right;">
            <a style="padding-right: 10px">
                <span class="glyphicon glyphicon-chevron-left" id="chevronleft2"></span>
            </a>

            <a style="padding-left: 10px">
                <span class="glyphicon glyphicon-chevron-right" id="chevronright2"></span>
            </a>
        </div>
    </form>


    </div>